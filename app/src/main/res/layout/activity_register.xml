<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_login"
    tools:context=".Activity.RegisterActivity">

    <TextView
        android:id="@+id/titleLogin"
        android:layout_marginTop="80dp"
        android:text="Đăng kí tài khoản"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:fontFamily="@font/svn_androgyne"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Nhập email"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/textAccountRegister"
                android:hint="Email"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/boder_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>

            <TextView
                android:layout_marginTop="15dp"
                android:text="Nhập mật khẩu"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/textPasswordRegister"
                android:hint="Mật khẩu"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/boder_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>

            <TextView
                android:layout_marginTop="15dp"
                android:text="Nhập lại mật khẩu"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/textRepeatPassword"
                android:hint="Nhập lại"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/boder_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#9EF13D"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/register"
                android:text="Đăng kí"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textAllCaps="false"
                android:background="#01C609"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>